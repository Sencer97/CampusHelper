<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_notice_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                />

            <TextView
                android:id="@+id/tv_notice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/civ_notice_head"
                android:layout_toEndOf="@+id/civ_notice_head"
                android:text="Sencer"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/civ_notice_head"
                android:layout_alignStart="@+id/tv_notice_name"
                android:textSize="12dp"
                android:text="3月30日 16:54" />
            <TextView
                android:id="@+id/tv_notice_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_notice_time"
                android:layout_alignBottom="@+id/tv_notice_name"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/tv_notice_time"
                android:text="计算机与信息安全学院"
                android:textSize="12dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#232323"
            android:text="@string/introduce"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            />
        <com.test.campushelper.view.ShowPicGridView
            android:id="@+id/gv_notice_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:layout_marginBottom="8dp"
            >

        </com.test.campushelper.view.ShowPicGridView>
    </LinearLayout>

</android.support.v7.widget.CardView>