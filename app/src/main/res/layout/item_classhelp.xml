<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_help_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        />

        <TextView
            android:id="@+id/tv_help_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/civ_help_head"
            android:layout_toEndOf="@+id/civ_help_head"
            android:text="Sencer"
            android:textColor="@android:color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_help_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_help_head"
            android:layout_alignStart="@+id/tv_help_nickname"
            android:textSize="12dp"
            android:text="3月30日 16:54" />
        <TextView
            android:id="@+id/tv_help_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_help_time"
            android:layout_alignBottom="@+id/tv_help_time"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/tv_help_time"
            android:text="计算机与信息安全学院"
            android:textSize="12dp"
            />
        <!--点击忽略该动态-->
        <ImageView
            android:id="@+id/iv_ignore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@+id/tv_help_department"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_horiz_black_24dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_help_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#232323"
        android:text="@string/introduce"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        />
    <com.test.campushelper.view.ShowPicGridView
        android:id="@+id/gv_help_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        android:layout_marginBottom="8dp"
        >

    </com.test.campushelper.view.ShowPicGridView>
    <LinearLayout
        android:id="@+id/ll_util"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#eee"
        android:gravity="center"
         >
        <LinearLayout
            android:id="@+id/ll_help_favor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >
            <!--点赞-->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_favor_64dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textColor="@android:color/black"
                android:paddingLeft="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >
            <!--评论-->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_comment_64dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textColor="@android:color/black"
                android:text="评论"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >
            <!--转发-->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_transmit_64dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="转发"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_favorlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/favorlist_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_favor_64dp"
            />
        <TextView
            android:id="@+id/tv_favorlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="xxx、xxx觉得很赞"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_nomore_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="———没有更多了———"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="gone"
        />
</LinearLayout>