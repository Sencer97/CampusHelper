<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_attend_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="12dp"
            />

        <TextView
            android:id="@+id/tv_attend_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/civ_attend_head"
            android:layout_toEndOf="@+id/civ_attend_head"
            android:text="Sencer"
            android:textColor="@android:color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_attend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_attend_head"
            android:layout_alignStart="@+id/tv_attend_nickname"
            android:textSize="12dp"
            android:text="3月30日 16:54" />
</RelativeLayout>