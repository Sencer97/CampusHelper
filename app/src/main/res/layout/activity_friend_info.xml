<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.campushelper.activity.FriendInfoActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_friend_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:src="@drawable/head"
        android:layout_marginTop="16dp"
        />
     <android.support.v7.widget.CardView

         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="16dp"
         android:background="@android:color/white"
         card_view:cardCornerRadius="2dp"
         card_view:cardElevation="2dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <!--用户名-->
             <RelativeLayout
                 android:id="@+id/rl_nickname"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">
                 <TextView
                     android:id="@+id/textView1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/nickname"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />
                 <TextView
                     android:id="@+id/tv_friend_nickname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView1"
                     android:layout_alignBottom="@+id/textView1"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />
             </RelativeLayout>
             <!--性别-->
             <RelativeLayout
                 android:id="@+id/rl_sex"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">

                 <TextView
                     android:id="@+id/textview2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/sex"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />
                 <TextView
                     android:id="@+id/tv_friend_sex"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView2"
                     android:layout_alignBottom="@+id/textView2"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />
             </RelativeLayout>
             <!--学校-->
             <RelativeLayout
                 android:id="@+id/rl_school"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">

                 <TextView
                     android:id="@+id/textView4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/school"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />
                 <TextView
                     android:id="@+id/tv_friend_school"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView4"
                     android:layout_alignBottom="@+id/textView4"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />
             </RelativeLayout>
             <!--学校-->
             <RelativeLayout
                 android:id="@+id/rl_depart"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">

                 <TextView
                     android:id="@+id/textView7"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/depart"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />
                 <TextView
                     android:id="@+id/tv_friend_depart"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView7"
                     android:layout_alignBottom="@+id/textView7"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />
             </RelativeLayout>
             <!--专业-->
             <RelativeLayout
                 android:id="@+id/rl_major"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">

                 <TextView
                     android:id="@+id/textView6"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/major"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tv_friend_major"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView6"
                     android:layout_alignBottom="@+id/textView6"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />
             </RelativeLayout>
             <!--个性签名-->
             <RelativeLayout
                 android:id="@+id/rl_signature"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp">

                 <TextView
                     android:id="@+id/textView8"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="15dp"
                     android:text="@string/signature"
                     android:textColor="@android:color/black"
                     android:textSize="15dp" />

                 <TextView
                     android:id="@+id/tv_friend_sign"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBaseline="@+id/textView8"
                     android:layout_alignBottom="@+id/textView8"
                     android:layout_alignParentEnd="true"
                     android:layout_marginEnd="32dp"
                     android:text="" />

             </RelativeLayout>
         </LinearLayout>
     </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:textSize="20dp"
        android:background="@drawable/arc_shape"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/send_message"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:textSize="20dp"
        android:background="@drawable/arc_shape"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/delete_friend"
        android:textColor="@android:color/white" />

</LinearLayout>
