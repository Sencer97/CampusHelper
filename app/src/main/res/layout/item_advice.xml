<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">
    <LinearLayout
        android:id="@+id/ll_advice_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_advice_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:src="@mipmap/ic_anonym_48dp" />

            <TextView
                android:id="@+id/tv_advice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/civ_advice_head"
                android:layout_toEndOf="@+id/civ_advice_head"
                android:text="Sencer"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_advice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/civ_advice_head"
                android:layout_alignStart="@+id/tv_advice_title"
                android:textSize="12dp"
                android:text="03-30 16:54" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_advice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#232323"
            android:text="@string/introduce"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>